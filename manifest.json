{
    "name": "LightShot Crawler",
    "version": "1.2",
    "description": "LightShot Crawler by Ben Hawthorn",
    "permissions": ["activeTab", "tabs", "declarativeContent", "storage", "http://prnt.sc/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16":  "images/icon16.png",
            "32":  "images/icon32.png",
            "48":  "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16":  "images/icon16.png",
        "32":  "images/icon32.png",
        "48":  "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}